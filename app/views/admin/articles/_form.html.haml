= render partial: 'shared/errors', object: @article.errors
= form_for [:admin, @article], html: { id: nil, class: 'article' } do |f|
  .row
    .btn-group.round.col-xs-12.col-md-8
      = f.submit class: 'btn btn-default'
      = link_to t('.preview'), @article, class: 'btn btn-default'
      = link_to t('.back'), admin_articles_path, class: 'btn btn-default'
      .col-md-1
      .form-group.input-group.col-xs-2
        %i.glyphicon.glyphicon-search.pre.form-control-mark
        = text_field_tag "article[tag_names]", nil, autocomplete: 'off', 
            id: nil, class: 'form-control typeahead tags', placeholder: 'Tags',
            data: { search: admin_article_tags_path(@article), 
                    submit: admin_article_article_tags_path(@article) }
        %span.input-group-addon
          = link_to '', admin_tags_path, class: 'glyphicon glyphicon-list-alt',
              remote: true
    .col-xs-12.col-md-2
      .form-group
        .row.text-right
          = f.label :published_at
        .row.pull-right
          .input-group.text-right
            = f.datetime_local_field :published_at, class: 'form-control'
            %span.input-group-addon.pointer
              %span.glyphicon.glyphicon-calendar{ "aria-hidden" => true }
  .row
    #article_tags.col-xs-12= render @article.article_tags
  .row
    .form-group.col-xs-8
      = f.label :title
      = f.text_field :title, class: 'form-control'

  .row
    .form-group.col-xs-8= f.text_area :content, rows: 40, class: 'form-control'
