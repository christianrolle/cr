.modal{ role: 'dialog', 'aria-labelledby' => 'modalLabel' }
  .modal-dialog{ role: 'document' }
    .modal-content{ class: controller_name }
      .modal-header
        %button.close{ type: :button, 'aria-label' => 'Close', 
                        data: { dismiss: "modal" } }
          %span{ "aria-hidden" => "true" } &times;
          %span.sr-only= 'close'
        %h4#modalLabel.modal-title= title
      .modal-body
        = yield
